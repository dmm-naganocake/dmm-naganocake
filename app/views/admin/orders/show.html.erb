<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="my-5">注文履歴詳細</h3>
        <div class="row">
          <div class="offset-2 col-2 mb-3">購入者</div>
          <div class="col-8"><%= @order.name %></div>

          <div class="offset-2 col-2 mb-3">注文日</div>
          <div class="col-8"><%= @order.created_at.to_s(:datetime_jp) %></div>

          <div class="offset-2 col-2 mb-3">配送先</div>
          <div class="col-8"><%= @order.address %></div>

          <div class="offset-2 col-2 mb-3">支払い方法</div>
          <div class="col-8"><%= @order.payment_method_i18n %></div>

          <div class="offset-2 mt-5">注文ステータス</div>
          <div class="col-8">
            <%= form_with url: admin_order_path(@order), model: @order, local: true do |f| %>
            <%= f.collection_select :status, [Order.statuses_i18n[:payment_waiting], Order.statuses_i18n[:payment_confirmation],Order.statuses_i18n[:in_production], Order.statuses_i18n[:preparing_delivery], Order.statuses_i18n[:delivered]], :id, :statuses_i18n, prompt: "入金待ち" %>
            <%= f.submit "更新", class: "btn btn-outline-dark" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>