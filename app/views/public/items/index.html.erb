<h1>Public::Items#index</h1>
<p>Find me in app/views/public/items/index.html.erb</p>
<main>

  <div class="item_visual">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <%= render "public/items/genre", genres: @genres %>
        </div>
        <div class="col-md-9">
          <div class="row">
        <h1>商品一覧</h1>
          <% @items.each do |item| %>
            <div class="col-md-4">
          <%= attachment_image_tag item,:image,:fill,500,350,format: 'jpeg', fallback: "no-image.jpg",size:'150x100' %><br>
          <%= link_to item.name,item_path(item) %>
          </div>
          <% end %>
          
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
