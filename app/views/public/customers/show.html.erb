<div class="container">
  <div class="row">
    <div class="col-6 mt-3">

      <h1>Public::Customers#show</h1>
      <p>Find me in app/views/public/customers/show.html.erb</p>

      <h4>マイページ</h4>

      <p class="mt-4">登録情報　　<%= link_to "編集する", edit_customers_path, class: "btn btn-success" %></p>

      <table class="table table-bordered">
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name + "　" + @customer.first_name %></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td><%= @customer.last_name_kana + "　" + @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>

      <p>配送先　　<%= link_to "一覧を見る", new_address_path, class: "btn btn-primary" %></p>
      <p>注文履歴　　<%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></p>

    </div>
  </div>
</div>