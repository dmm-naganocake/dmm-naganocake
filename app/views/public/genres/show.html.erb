<div class="container">
  <div class="row">
    <div class="col-12">
      <h4>ジャンル一覧</h4>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込み）</th>
            <th>商品説明</th>
            <!--<th>小計</th>-->
          </tr>
        </thead>
          <% @genre.items.each do |item| %>
          <tr>
            <td>
              <%= attachment_image_tag item.image,:image,:fill,500,350,format: 'jpeg', fallback: "no-image.jpg",size:'150x100' %><br>
              <%= link_to item.name,item_path(item) %>
            </td>
            <td><%= item.price %></td>
            <td><%= item.introduction %></td>
          <% end %>
          </tr>
      </table>
      <div>
      </div>
    </div>
  </div>
</div>