<h1>Public::Orders#new</h1>
<p>Find me in app/views/public/orders/new.html.erb</p>

<div class="container">
     <%= radio_button_tag :paytype, 'card' %>
     <%= label_tag :paytype_card, "クレジット" %>
     
     <%= radio_button_tag :paytype, 'bank' %>
     <%= label_tag :paytype_bank, "銀行振込" %>
     
     <%= radio_button_tag :address, 'my' %>
     <%= label_tag :address_my, "ご自身の住所" %>
     
     <%= radio_button_tag :address, 'select' %>
     <%= label_tag :address_select, "登録住所から選択" %>
     
     <%= radio_button_tag :address, 'new' %>
     <%= label_tag :address_new, "新しいお届け先" %>
     
     
</div>

<p>注文情報入力</p>

<%= form_with model: @order, local: true do |f| %>

  <div class="field">
    <%= f.label "クレジットカード" %>
    <%= f.radio_button :payment_method %>
    <%= f.label "銀行振込" %>
    <%= f.radio_button :payment_method %>

  </div>

  <%= f.submit '確認画面へ進む',class: "btn btn-success rounded-pill mt-3" %>
<% end %>
  