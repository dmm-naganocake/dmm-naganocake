<div class="container">
  <div class="row">
    <div class="col-4 mt-3">

      <h1>Public::Addresses#edit</h1>
      <p>Find me in app/views/public/addresses/edit.html.erb</p>

      <h4>配送先編集</h4>

      <%= form_with model:@address, local: true do |f| %>
        <div class="form-group">
          <%= f.label :郵便番号（ハイフンなし） %>
          <%= f.text_field :postal_code, class: "col-3 form-control", placeholder: "0000000" %>
        </div>

        <div class="form-group">
          <%= f.label :住所 %>
          <%= f.text_field :address, class: "col-3 form-control", placeholder: "東京都渋谷区代々木神園町０−０" %>
        </div>

        <div class="form-group">
          <%= f.label :宛名 %>
          <%= f.text_field :name, class: "col-3 form-control", placeholder: "令和道子" %>
        </div>

        <div class="actions">
          <%= f.submit '変更内容を保存',class: "btn btn-success rounded-pill mt-3" %>
        </div>

      <% end %>

    </div>
  </div>
</div>

