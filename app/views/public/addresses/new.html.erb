<div class="container">
  <div class="row">
    <div class="col-4 mt-3">

      <h1>Public::Addresses#new</h1>
      <p>Find me in app/views/public/addresses/new.html.erb</p>

      <h4>配送先登録/一覧</h4>

      <%= form_with model:@address, local: true do |f| %>
        <div class="form-group">
          <%= f.label :郵便番号（ハイフンなし） %>
          <%= f.text_field :postal_code, class: "col-3 form-control", placeholder: "0000000" %>
        </div>

        <div class="form-group">
          <%= f.label :住所 %>
          <%= f.text_field :address, class: "col-3 form-control", placeholder: "東京都渋谷区代々木神園町０−０" %>
        </div>

        <div class="form-group">
          <%= f.label :宛名 %>
          <%= f.text_field :name, class: "col-3 form-control", placeholder: "令和道子" %>
        </div>

        <div class="actions">
          <%= f.submit '新規登録',class: "btn btn-success rounded-pill mt-3" %>
        </div>

      <% end %>

    </div>
  </div>

  <div class="row">
    <table class="table thead-light mt-4">

      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success rounded-pill" %>
            <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger rounded-pill" %>
          </td>
        </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>